<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>AdminLogin.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeeLoginServlet</servlet-name>
        <servlet-class>EmployeeLogin.EmployeeLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmployeeLogout</servlet-name>
        <servlet-class>EmployeeLogin.EmployeeLogout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>add_admin</servlet-name>
        <servlet-class>AdminLogin.add_admin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/AdminLoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeeLoginServlet</servlet-name>
        <url-pattern>/EmployeeLoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmployeeLogout</servlet-name>
        <url-pattern>/EmployeeLogout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>add_admin</servlet-name>
        <url-pattern>/add_admin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
